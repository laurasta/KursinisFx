<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="205.0" prefWidth="381.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.kursinisfx.fxControllers.NewCommentWindow">
   <children>
       <MenuBar prefHeight="25.0" prefWidth="382.0">
           <menus>
               <Menu mnemonicParsing="false" text="Back">
                   <items>
                       <MenuItem fx:id="cancelCommentCreate" mnemonicParsing="false" onAction="#returnToPrevious" text="Go back" />
                   </items>
               </Menu>
           </menus>
       </MenuBar>
       <Label layoutX="142.0" layoutY="25.0" text="Write comment">
           <font>
               <Font name="JetBrains Mono ExtraBold" size="15.0" />
           </font></Label>
       <TextField fx:id="contentField" layoutX="33.0" layoutY="75.0" prefHeight="85.0" prefWidth="248.0" promptText="Enter Comment" />
       <Label layoutX="33.0" layoutY="54.0" text="Content:" />
       <Button fx:id="createcommentF" layoutX="300.0" layoutY="111.0" mnemonicParsing="false" onAction="#createComment" text="Post" />
   </children>
</AnchorPane>
