<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="337.0" prefWidth="325.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.kursinisfx.fxControllers.MainWindow">
   <children>
      <MenuBar layoutY="2.0" prefHeight="25.0" prefWidth="325.0">
        <menus>
          <Menu mnemonicParsing="false" text="Log out">
            <items>
              <MenuItem fx:id="logOutBtn" mnemonicParsing="false" onAction="#logout" text="Log out" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Destinations">
            <items>
              <MenuItem fx:id="destinationsBtn" mnemonicParsing="false" onAction="#allDestinations" text="All destinations" />
